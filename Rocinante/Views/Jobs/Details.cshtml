<h3>Activities</h3>
<a class="btn btn-success" asp-action="AddActivity" asp-controller="Jobs" asp-route-id="@Model.Id">Add Activity</a>

<table class="table table-bordered table-striped table-sm">
    <tr>
        <th>Date</th>
        <th>Comment</th>
        <th>Action</th>

    </tr>
    @foreach (var item in Model.activities)
    {
        <tr>
            <td>@item.ActivityDate</td>
            <td>@item.Comment</td>
            <td>@item.Action</td>

        </tr>
    }
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
